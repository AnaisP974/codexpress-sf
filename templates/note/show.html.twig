{% extends 'base.html.twig' %}

{% block title %}
    {{ note.title }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/themes/prism.min.css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/prism.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/components/prism-markup-templating.min.js"></script>
    {# Add more language components as needed, for example: #}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/components/prism-php.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/components/prism-javascript.min.js"></script>
{% endblock %}

{% block body %}
    {% include 'components/note_header.html.twig' %}
    <section class="max-w-screen-lg mx-auto px-4 grid grid-cols-1 md:grid-cols-3 gap-4">
        <article class="col-span-1 md:col-span-2 bg-[#f5f2f0] rounded-md p-4 md:p-6 mb-4 flex flex-col border">
            <code class="language-html">{{ note.content|escape }}</code>
        </article>
        <aside class="flex flex-col gap-4 md:col-span-1">
            <div class="rounded-md p-4 mb-4 flex flex-col gap-4 border">
                <div class="flex items-center gap-2">
                    <img src="{{ note.creator.image ?? 'https://avatar.iran.liara.run/public/50' }}" alt="{{ note.creator.username }}" class="inline-block h-10 w-10 rounded-full">
                    <div class="flex flex-col gap-1">
                        <p class="text-xl font-bold">{{ note.creator.username }}</p>
                        <p class="text-sm text-slate-600">Member since {{ note.creator.createdAt|time_diff }} ago</p>
                    </div>
                </div>
                <div class="flex gap-2 items-center text-sm">
                    <form action="" method="post">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token('authenticate') }}">
                        <input type="hidden" name="note_id" value="{{ note.id }}">
                        <input type="hidden" name="creator_id" value="{{ app.user.id ?? 1 }}">
                        <button type="submit" class="flex items-center gap-1 bg-violet-100 rounded-md py-2 px-3 hover:bg-violet-200 self-end w-fit transition-all duration-200 ease-in-out">
                            {% set likes = note.likes|length %}
                            {{ ux_icon('mdi:heart-outline', { 'class': 'h-5 w-5 text-violet-950 mr-1 inline-block' }) }}
                            {{ likes|format_number }}
                        </button>
                    </form>
                    {% for item in note.creator.networks %}
                        <a href="{{ item.url }}" class="bg-violet-100 rounded-md py-2 px-3 hover:bg-violet-200 self-end w-fit transition-all duration-200 ease-in-out">
                            {{ ux_icon('mdi:' ~ item.name, { 'class': 'h-5 w-5 text-violet-950 inline-block' }) }}
                        </a>
                    {% endfor %}
                </div>
            </div>
        </aside>
    </section>
    <div class="max-w-screen-lg mx-auto px-4 pb-6 md:pb-16">
        {{ include('components/cta.html.twig') }}
    </div>
{% endblock %}
