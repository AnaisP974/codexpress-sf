{# tailwindcss Sliding pagination control implementation #}
{% if pageCount > 1 %}
    <div class="inline-block">
        <div class="flex items-baseline flex-row rounded-sm w-auto">
        {% if first is defined and current != first %}
            <span class="bg-white text-violet-600 px-3 py-2 text-lg rounded">
                <a href="{{ path(route, query|merge({(pageParameterName): first})) }}">⇤</a>
            </span>
        {% endif %}

        {% if previous is defined %}
            <span class="bg-white text-violet-600 px-3 text-lg py-2 rounded">
                <a rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&larr;</a>
            </span>
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <span class="bg-white text-violet-600 px-3 py-2 text-lg rounded">
                    <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                </span>
            {% else %}
                <span class="bg-violet-600 text-white px-3 py-2 text-lg rounded">{{ page }}</span>
            {% endif %}
        {% endfor %}

        {% if next is defined %}
            <span class="bg-white text-violet-600 px-3 py-2 text-lg rounded">
                <a rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">&rarr;</a>
            </span>
        {% endif %}

        {% if last is defined and current != last %}
            <span class="bg-white text-violet-600 px-3 py-2 text-lg rounded">
                <a href="{{ path(route, query|merge({(pageParameterName): last})) }}">⇥</a>
            </span>
        {% endif %}
        </div>
    </div>
{% endif %}
