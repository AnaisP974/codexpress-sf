{% extends 'base.html.twig' %}

{% block title %}
    Search results
{% endblock %}

{% block body %}
    <header class="bg-gradient-to-r from-violet-100 via-slate-100 to-indigo-100 py-5 md:py-16">
        <div class="px-4 sm:max-w-screen-sm md:max-w-screen-lg mx-auto">
            <h1 class="text-4xl md:text-5xl font-bold">Search results</h1>
            <p class="mb-4">
                Search results for <strong>{{ searchQuery ?? 'nothing' }}</strong>
            </p>
        </div>
    </header>
    <main class="max-w-screen-lg mx-auto py-5 md:py-16 px-4">
        {% if notes is defined %}
            {% if notes|length > 0 %}
                <p class="text-center mb-4">
                    {{ notes|length }} results found
                </p>
                {{ include('components/notes-list.html.twig') }}
            {% else %}
                <p class="text-center text-slate-600 mb-4">No results found</p>
            {% endif %}
        {% else %}
            <div class="max-w-screen-lg mx-auto h-96 flex flex-col items-center justify-center">
                <p class="text-slate-600 mb-4">Sorry, it seems you've not searched anything</p>
            </div>
        {% endif %}
    </main>
    {% if notes is defined %}
        <div class="px-4 pb-6 md:pb-16 text-center">
            {{ knp_pagination_render(notes) }}
        </div>
    {% endif %}
{% endblock %}
